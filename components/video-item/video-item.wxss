/* components/video-item/video-item.wxss */
.video-item .video-top {
  position: relative;
}

.video-item .video-top .info {
  position: absolute;
  bottom: 0;
  display: flex;
  justify-content: space-between;
  width: 100%;
}
.video-item .video-top .info .play-count,
.video-item .video-top .info .look {
  font-size: 28rpx;
  padding: 10rpx;
  color: white;
}

.video-item .video-top .info .play-count {
  display: flex;
  align-items: center;
}

.video-item .video-top .info .play-count::before {
  content: "";
  width: 30rpx;
  height: 24rpx;
  margin-right: 8rpx;
  background-size: cover;
  background-image: url("data:image/jpeg;base64,");
}

.video-item .video-top .cover {
  width: 100%;
  border-radius: 10rpx;
}

.video-item .desc {
  display: block;
  margin: 20rpx 0; 
  font-size: 28rpx;
}